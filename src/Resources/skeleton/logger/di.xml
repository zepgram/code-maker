<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Zepgram\Aws\Logger\Handler" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
            <argument name="fileName" xsi:type="string">var/log/zepgram/aws.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="Zepgram\Aws\Logger\Logger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Zepgram\Aws\Logger\Handler</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Zepgram\Aws\Model\AbstractClient">
        <arguments>
            <argument name="logger" xsi:type="object">Zepgram\Aws\Logger\Logger</argument>
        </arguments>
    </type>
    <type name="Zepgram\Aws\Model\StorageRepository">
        <arguments>
            <argument name="logger" xsi:type="object">Zepgram\Aws\Logger\Logger</argument>
        </arguments>
    </type>
</config>
